    <p class="show-pay">
     <%= link_to "Show this payment", category_payment_path(@category, payment) %>

    </p>
  <% end %>
<div class= "links-shared">
<div>
<%= link_to "New payment", new_category_payment_path(@category) %>

<%= link_to "Back to categories", categories_path %>
</div>

