<%= render "shared/navbar" %>
<p style="color: green"><%= notice %></p>

<h1 class="payment-font">Payments</h1>
<div class= "cat-name">
<%= @category.name %>
</div>
<div id="payments">
  <% @payments.each do |payment| %>
  
